{
  "manifest_version": 3,
  "name": "Gcal Weekend Highlighter",
  "version": "1.0.0",
  "description": "Highlights weekends in Google Calendar. Repo at https://github.com/EdwinChua/gcal-date-highlighter",
  "icons": { "128": "icon.png" },
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["constants.js","utils.js","theme-watcher.js","weekend-highlighter.js","main.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
